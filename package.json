{
  "name": "react-native-pbkdf2",
  "version": "0.0.1",
  "description": "PBKDF2 implementation",
  "main": "lib/commonjs/index.js",
  "types": "lib/typescript/index.d.ts",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-pbkdf2.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build && husky install"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/alexdonh/react-native-pbkdf2",
  "author": "Alex Do <alex.donh@gmail.com> (https://github.com/alexdonh)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexdonh/react-native-pbkdf2/issues"
  },
  "homepage": "https://github.com/alexdonh/react-native-pbkdf2#readme",
  "devDependencies": {
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.18.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "dependencies": {
    "safe-buffer": "^5.2.1"
  }
}
